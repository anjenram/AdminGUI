.box.login-box
    .tile-form
        span Login
    form.form-login
        .form-group.hiddenblock
            input(type='hidden' name='non_field_errors')
        .from-group
            input(type="name" name="username" required)
            span.highlight
            span.bar
            label Username
        .from-group
            input(type="password" name="password" required)
            span.highlight
            span.bar
            label Password

        .from-group.btns-control
            button.btn.logIn Log In
            a.btn Sign Up